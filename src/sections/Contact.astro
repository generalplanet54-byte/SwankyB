---
import Button from '../components/Button.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
---
<section id="contact" class="bg-[#121212] py-24">
  <div class="container grid gap-16 lg:grid-cols-[1.1fr_1fr]">
    <div class="space-y-8">
      <p class="uppercase text-xs tracking-[0.5em] text-champagne/70">Contact</p>
      <h2 class="font-display text-4xl leading-tight sm:text-5xl">Letâ€™s lock the date.</h2>
      <p class="text-base text-off-white/70">
        Share the occasion, headcount, and the vibe. Our concierge desk responds within one business day with a curated
        action plan and partners who move at your pace.
      </p>

      <div class="grid gap-6 sm:grid-cols-2">
        <div class="rounded-2xl border border-off-white/10 bg-charcoal/70 px-6 py-5">
          <p class="text-xs uppercase tracking-[0.3em] text-champagne/60">Direct line</p>
          <p class="mt-3 text-sm text-off-white/80">hello@swankyboyz.com</p>
        </div>
        <div class="rounded-2xl border border-off-white/10 bg-charcoal/70 px-6 py-5">
          <p class="text-xs uppercase tracking-[0.3em] text-champagne/60">Response window</p>
          <p class="mt-3 text-sm text-off-white/80">Within 24 hours weekdays</p>
        </div>
      </div>
    </div>

    <form
      class="space-y-6 rounded-3xl border border-off-white/10 bg-charcoal/70 p-8 shadow-luxury"
      method="post"
      action="/api/book"
    >
      <div class="grid gap-4 sm:grid-cols-2">
        <div class="flex flex-col gap-2">
          <label class="text-xs uppercase tracking-[0.3em] text-off-white/50" for="name">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            autocomplete="name"
            class="rounded-full border border-off-white/15 bg-black/40 px-5 py-3 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
            placeholder="Full name"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label class="text-xs uppercase tracking-[0.3em] text-off-white/50" for="email">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            autocomplete="email"
            class="rounded-full border border-off-white/15 bg-black/40 px-5 py-3 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
            placeholder="you@domain.com"
          />
        </div>
      </div>

      <div class="grid gap-4 sm:grid-cols-2">
        <div class="flex flex-col gap-2">
          <label class="text-xs uppercase tracking-[0.3em] text-off-white/50" for="phone">Phone</label>
          <input
            id="phone"
            name="phone"
            type="tel"
            autocomplete="tel"
            class="rounded-full border border-off-white/15 bg-black/40 px-5 py-3 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
            placeholder="WhatsApp or mobile"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label class="text-xs uppercase tracking-[0.3em] text-off-white/50" for="date">Event date</label>
          <input
            id="date"
            name="date"
            type="date"
            class="rounded-full border border-off-white/15 bg-black/40 px-5 py-3 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
          />
        </div>
      </div>

      <div class="flex flex-col gap-2">
        <label class="text-xs uppercase tracking-[0.3em] text-off-white/50" for="details">Details</label>
        <textarea
          id="details"
          name="details"
          required
          rows="4"
          placeholder="Occasion, venue ideas, must-have touches."
          class="rounded-3xl border border-off-white/15 bg-black/40 px-5 py-4 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
        ></textarea>
      </div>

      <div class="flex flex-col gap-3">
        <Button type="submit" size="lg">Submit request</Button>
        <p class="text-xs uppercase tracking-[0.2em] text-off-white/40">We never share details without consent.</p>
      </div>
    </form>

    <div class="lg:col-span-2">
      <NewsletterSignup />
    </div>
  </div>
</section>
