---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const journalSections = [
  {
    title: 'Featured Articles',
    description: 'The latest in grooming, skincare, and lifestyle',
    link: '/articles',
    cta: 'Read All Articles'
  },
  {
    title: 'Product Reviews',
    description: 'In-depth analysis of premium products tested by our team',
    link: '/reviews',
    cta: 'View All Reviews'
  },
  {
    title: 'Buying Guides',
    description: 'Expert recommendations and buying guides for every category',
    link: '/guides/ultimate-mens-grooming',
    cta: 'Explore Guides'
  },
  {
    title: 'Comparison Tools',
    description: 'Side-by-side comparisons of the best products in each category',
    link: '/comparisons/wireless-earbuds',
    cta: 'Compare Products'
  }
];

const topics = [
  'Grooming 101',
  'Skincare Science',
  'Fragrance Guides',
  'Product Reviews',
  'Buying Guides',
  'How-To Tutorials',
  'Expert Interviews',
  'Trend Reports',
  'Travel Tips',
  'Weekly Finds',
  'Product Comparisons',
  'Brand Spotlights'
];
---

<Layout
  title="Journal | SwankyBoyz - Editorial Content & Guides"
  description="SwankyBoyz Journal: Expert articles, product reviews, buying guides, and editorial content for the modern gentleman."
  canonical="/journal"
>
  <main class="bg-charcoal text-off-white">
    {/* Hero Section */}
    <section class="border-b border-off-white/10 bg-gradient-to-br from-charcoal via-black/60 to-charcoal">
      <div class="container space-y-8 py-24">
        <div class="space-y-4">
          <p class="text-xs uppercase tracking-[0.45em] text-champagne/80">Editorial</p>
          <h1 class="font-display text-5xl leading-snug sm:text-6xl">
            The Journal
          </h1>
          <p class="max-w-2xl text-lg text-off-white/70">
            Expert-curated articles, in-depth reviews, and practical guides for the modern gentleman. From grooming rituals to lifestyle excellence.
          </p>
        </div>

        <div class="flex flex-wrap gap-3">
          <a href="/articles" class="inline-flex items-center justify-center rounded-full bg-champagne px-8 py-3 text-xs font-semibold uppercase tracking-[0.4em] text-charcoal transition hover:bg-champagne/80">
            All Articles
          </a>
          <a href="/reviews" class="inline-flex items-center justify-center rounded-full border border-champagne px-8 py-3 text-xs font-semibold uppercase tracking-[0.4em] text-champagne transition hover:bg-champagne/10">
            Product Reviews
          </a>
        </div>
      </div>
    </section>

    {/* Content Hub Grid */}
    <section class="border-b border-off-white/10 py-24">
      <div class="container space-y-12">
        <div class="space-y-3">
          <h2 class="font-display text-3xl">Content Hubs</h2>
          <p class="text-off-white/70">Explore our editorial collections</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {journalSections.map((section) => (
            <a
              href={section.link}
              class="group flex flex-col gap-6 rounded-3xl border border-off-white/10 bg-black/40 p-10 transition hover:border-champagne/70 hover:bg-black/60"
            >
              <div>
                <h3 class="font-display text-2xl text-off-white group-hover:text-champagne transition">{section.title}</h3>
                <p class="mt-3 text-base text-off-white/70 group-hover:text-off-white/80 transition">{section.description}</p>
              </div>
              
              <div class="mt-auto flex items-center gap-2 text-champagne text-sm font-semibold opacity-0 group-hover:opacity-100 transition">
                {section.cta} <span>→</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    {/* Browse by Topic */}
    <section class="border-b border-off-white/10 py-24">
      <div class="container space-y-12">
        <div class="space-y-3">
          <h2 class="font-display text-3xl">Browse by Topic</h2>
          <p class="text-off-white/70">Find content by subject matter</p>
        </div>

        <div class="flex flex-wrap gap-3">
          {topics.map((topic) => (
            <a
              href={`/articles?topic=${topic.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center justify-center rounded-full border border-off-white/20 bg-black/40 px-6 py-3 text-sm font-semibold text-off-white transition hover:border-champagne hover:bg-champagne/10 hover:text-champagne"
            >
              {topic}
            </a>
          ))}
        </div>
      </div>
    </section>

    {/* Latest Content Preview */}
    <section class="py-24">
      <div class="container space-y-12">
        <div class="space-y-3">
          <h2 class="font-display text-3xl">Latest Updates</h2>
          <p class="text-off-white/70">Fresh editorial every week</p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          {[
            {
              title: 'The Ultimate Grooming Kit for Travel',
              category: 'Guides',
              readTime: '8 min',
              date: 'Oct 28, 2025'
            },
            {
              title: 'Electric Shaver Comparison: Braun vs Sony',
              category: 'Reviews',
              readTime: '12 min',
              date: 'Oct 25, 2025'
            },
            {
              title: '5 Skincare Mistakes That Age You',
              category: 'Tips',
              readTime: '6 min',
              date: 'Oct 20, 2025'
            }
          ].map((article) => (
            <article class="group rounded-2xl border border-off-white/10 bg-black/40 overflow-hidden transition hover:border-champagne/70">
              <div class="h-40 bg-gradient-to-br from-champagne/10 to-transparent"></div>
              <div class="p-6 space-y-3">
                <div class="flex items-center gap-2 text-xs">
                  <span class="text-champagne font-semibold uppercase tracking-wider">{article.category}</span>
                  <span class="text-off-white/50">·</span>
                  <span class="text-off-white/60">{article.readTime}</span>
                </div>
                <h3 class="font-display text-lg text-off-white group-hover:text-champagne transition">{article.title}</h3>
                <p class="text-xs text-off-white/50">{article.date}</p>
              </div>
            </article>
          ))}
        </div>

        <div class="flex justify-center">
          <a href="/articles" class="inline-flex items-center justify-center rounded-full border border-off-white/20 bg-black/40 px-8 py-3 text-sm font-semibold text-off-white transition hover:border-champagne hover:bg-champagne/10 hover:text-champagne">
            View All Articles →
          </a>
        </div>
      </div>
    </section>

    {/* Newsletter CTA */}
    <section class="border-t border-off-white/10 bg-black/40 py-20">
      <div class="container text-center space-y-6">
        <h2 class="font-display text-3xl">Stay Updated</h2>
        <p class="max-w-2xl mx-auto text-off-white/70">Get the latest articles, reviews, and guides delivered to your inbox weekly.</p>
        <form class="flex gap-3 max-w-md mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 rounded-full border border-off-white/20 bg-charcoal px-5 py-3 text-sm text-off-white placeholder:text-off-white/40 focus:border-champagne focus:outline-none focus:ring-2 focus:ring-champagne/40"
          />
          <button
            type="submit"
            class="inline-flex items-center justify-center rounded-full bg-champagne px-6 py-3 text-xs font-semibold uppercase tracking-[0.3em] text-charcoal transition hover:bg-champagne/80"
          >
            Subscribe
          </button>
        </form>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
