---
import Layout from '../../layouts/Layout.astro';
import { spotlightProducts, type SpotlightProduct } from '../../data/spotlightProducts';
import { buildProductReviewJsonLd } from '../../lib/seo/meta';

interface PageProps {
  product: SpotlightProduct;
}

export const prerender = true;

export function getStaticPaths() {
  return spotlightProducts.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props as PageProps;

const productSeo = {
  title: `${product.name} Review | SwankyBoyz`,
  description: product.summary,
  canonical: `/reviews/${product.slug}`,
  ogType: 'product' as const,
  image: {
    src: product.image,
    alt: product.name,
  },
  tags: product.badges,
};

const productStructuredData = buildProductReviewJsonLd(product);
---
<Layout {...productSeo} structuredData={productStructuredData}>
  <main class="bg-charcoal py-24">
    <article class="container max-w-4xl space-y-14 text-off-white">
      <header class="space-y-6">
        <p class="text-xs uppercase tracking-[0.4em] text-champagne/80">Editor Review</p>
        <h1 class="font-display text-4xl leading-tight sm:text-5xl">{product.name}</h1>
        <p class="max-w-3xl text-base text-off-white/70">{product.summary}</p>
        <div class="flex flex-wrap items-center gap-4 text-xs uppercase tracking-[0.25em] text-off-white/50">
          <span>Rating {product.ratingValue.toFixed(1)} / 5</span>
          <span>{product.reviewCount.toLocaleString()} reader impressions</span>
            <span>Price ${product.price.toFixed(2)} {product.priceCurrency ?? 'USD'}</span>
        </div>
        <div class="overflow-hidden rounded-3xl border border-off-white/10">
          <img src={product.image} alt={product.name} loading="lazy" class="h-96 w-full object-cover" />
        </div>
        <div class="flex flex-wrap gap-3 text-xs uppercase tracking-[0.25em] text-off-white/60">
          {product.badges.map((badge) => (
            <span class="rounded-full border border-off-white/20 px-4 py-2">{badge}</span>
          ))}
        </div>
      </header>

      <section class="space-y-6 text-base text-off-white/80">
        <h2 class="text-sm uppercase tracking-[0.35em] text-off-white/60">Bottom line</h2>
        <p class="leading-relaxed">{product.reviewBody}</p>
      </section>

      <section class="grid gap-6 md:grid-cols-2">
        <div class="space-y-4 rounded-3xl border border-off-white/10 bg-[#161616] p-6">
          <h3 class="text-sm uppercase tracking-[0.35em] text-champagne/80">What impressed us</h3>
          <ul class="space-y-3 text-sm text-off-white/80">
            {product.pros.map((pro) => (
              <li class="flex gap-3">
                <span class="mt-1 h-1.5 w-1.5 rounded-full bg-champagne"></span>
                <span>{pro}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="space-y-4 rounded-3xl border border-off-white/10 bg-[#161616] p-6">
          <h3 class="text-sm uppercase tracking-[0.35em] text-off-white/60">Keep in mind</h3>
          <ul class="space-y-3 text-sm text-off-white/80">
            {product.cons.map((con) => (
              <li class="flex gap-3">
                <span class="mt-1 h-1.5 w-1.5 rounded-full bg-off-white/30"></span>
                <span>{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <section class="space-y-4 rounded-3xl border border-off-white/10 bg-[#161616] p-6">
        <h3 class="text-sm uppercase tracking-[0.35em] text-off-white/60">Best suited for</h3>
        <ul class="space-y-3 text-sm text-off-white/80">
          {product.useCases.map((useCase) => (
            <li class="flex gap-3">
              <span class="mt-1 h-1.5 w-1.5 rounded-full bg-off-white/30"></span>
              <span>{useCase}</span>
            </li>
          ))}
        </ul>
      </section>

      <section class="space-y-4 rounded-3xl border border-off-white/10 bg-[#101010] p-6 text-sm text-off-white/80">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div>
            <p class="uppercase tracking-[0.35em] text-champagne/80">Current price</p>
            <p class="text-2xl font-semibold text-off-white">${product.price.toFixed(2)} {product.priceCurrency ?? 'USD'}</p>
          </div>
          <a
            class="inline-flex items-center justify-center rounded-full border border-transparent bg-champagne px-6 py-3 text-xs font-semibold uppercase tracking-[0.4em] text-charcoal transition hover:bg-champagne/90"
            href={product.affiliateUrl}
            target="_blank"
            rel="nofollow sponsored noopener"
            data-affiliate-link
            data-affiliate-id={product.id}
            data-affiliate-name={product.name}
            data-affiliate-url={product.affiliateUrl}
            data-affiliate-product-url={product.url}
            data-affiliate-source="reviews:detail"
          >
            Shop Amazon
          </a>
        </div>
        <p class="text-xs text-off-white/60">
          As an Amazon Associate we earn from qualifying purchases. Confirm price and availability directly with the
          retailer.
        </p>
      </section>
    </article>
  </main>
</Layout>
