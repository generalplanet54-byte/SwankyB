---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const categories = [
  {
    slug: 'grooming',
    name: 'Grooming',
    icon: '‚úÇÔ∏è',
    description: 'Electric shavers, trimmers, clippers & professional grooming tools for the modern gentleman',
    featured: true,
    priority: 'Essential'
  },
  {
    slug: 'skincare',
    name: 'Skincare',
    icon: 'üíÜ',
    description: 'Premium moisturizers, serums, cleansers & anti-aging products engineered for men',
    featured: true,
    priority: 'Core'
  },
  {
    slug: 'fragrance',
    name: 'Fragrance',
    icon: 'üß¥',
    description: 'Luxury colognes, eau de parfums & niche fragrances for every occasion',
    featured: true,
    priority: 'Core'
  },
  {
    slug: 'audio',
    name: 'Audio & Tech',
    icon: 'üéß',
    description: 'Premium wireless earbuds, headphones & audio accessories for the executive',
    featured: false,
    priority: 'Secondary'
  },
  {
    slug: 'accessories',
    name: 'Accessories',
    icon: '‚åö',
    description: 'Luxury wallets, leather goods, watches & lifestyle accessories',
    featured: false,
    priority: 'Secondary'
  }
];
---

<Layout
  title="All Categories | SwankyBoyz - Premium Grooming & Lifestyle"
  description="Explore all categories: grooming, skincare, fragrance, audio, and accessories. Curated recommendations for the modern gentleman."
  canonical="/categories"
>
  <main class="bg-charcoal text-off-white">
    {/* Hero Section */}
    <section class="border-b border-off-white/10 bg-gradient-to-br from-charcoal via-black/60 to-charcoal">
      <div class="container space-y-8 py-24">
        <div class="space-y-4">
          <p class="text-xs uppercase tracking-[0.45em] text-champagne/80">Browse All</p>
          <h1 class="font-display text-5xl leading-snug sm:text-6xl">
            Curated Categories
          </h1>
          <p class="max-w-2xl text-lg text-off-white/70">
            Explore our hand-selected collection of premium grooming, skincare, and lifestyle products. Each category is carefully vetted by our editorial team.
          </p>
        </div>
      </div>
    </section>

    {/* Featured Categories Section */}
    <section class="border-b border-off-white/10 py-24">
      <div class="container space-y-12">
        <div class="space-y-3">
          <h2 class="font-display text-3xl">Core Collections</h2>
          <p class="text-off-white/70">Essential categories curated for the modern gentleman</p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          {categories.filter(cat => cat.featured).map((category) => (
            <a
              href={`/category/${category.slug}`}
              class="group relative overflow-hidden rounded-3xl border border-off-white/10 bg-black/40 p-8 transition hover:border-champagne/70 hover:bg-black/60"
            >
              <div class="space-y-4">
                <div class="text-5xl">{category.icon}</div>
                <div>
                  <h3 class="font-display text-2xl text-off-white group-hover:text-champagne transition">{category.name}</h3>
                  <p class="mt-2 text-sm text-off-white/60 group-hover:text-off-white/80 transition">{category.description}</p>
                </div>
              </div>
              
              <div class="mt-6 flex items-center gap-2 text-champagne text-sm font-semibold opacity-0 group-hover:opacity-100 transition">
                Explore <span>‚Üí</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    {/* Secondary Categories Section */}
    <section class="border-b border-off-white/10 py-24">
      <div class="container space-y-12">
        <div class="space-y-3">
          <h2 class="font-display text-3xl">Complementary Collections</h2>
          <p class="text-off-white/70">Expand your experience with curated audio, tech, and accessories</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {categories.filter(cat => !cat.featured).map((category) => (
            <a
              href={`/category/${category.slug}`}
              class="group flex items-start gap-6 rounded-2xl border border-off-white/10 bg-black/40 p-8 transition hover:border-champagne/70 hover:bg-black/60"
            >
              <div class="text-4xl flex-shrink-0">{category.icon}</div>
              <div class="flex-1">
                <h3 class="font-display text-xl text-off-white group-hover:text-champagne transition">{category.name}</h3>
                <p class="mt-2 text-sm text-off-white/70 group-hover:text-off-white/80 transition">{category.description}</p>
                <div class="mt-4 flex items-center gap-2 text-champagne text-sm font-semibold opacity-0 group-hover:opacity-100 transition">
                  Explore <span>‚Üí</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    {/* Quick Navigation Section */}
    <section class="py-24">
      <div class="container space-y-12">
        <div class="space-y-3 text-center">
          <h2 class="font-display text-3xl">Quick Navigation</h2>
          <p class="text-off-white/70">Find what you're looking for</p>
        </div>

        <div class="grid gap-4 md:grid-cols-3 lg:grid-cols-5">
          {categories.map((category) => (
            <a
              href={`/category/${category.slug}`}
              class="inline-flex items-center justify-center rounded-full border border-off-white/20 bg-black/40 px-6 py-3 text-sm font-semibold text-off-white transition hover:border-champagne hover:bg-champagne/10 hover:text-champagne"
            >
              {category.name}
            </a>
          ))}
          <a
            href="/articles"
            class="inline-flex items-center justify-center rounded-full border border-off-white/20 bg-black/40 px-6 py-3 text-sm font-semibold text-off-white transition hover:border-champagne hover:bg-champagne/10 hover:text-champagne"
          >
            Journal & Guides
          </a>
          <a
            href="/reviews"
            class="inline-flex items-center justify-center rounded-full border border-off-white/20 bg-black/40 px-6 py-3 text-sm font-semibold text-off-white transition hover:border-champagne hover:bg-champagne/10 hover:text-champagne"
          >
            Reviews
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
