---
interface Props {
  title: string;
  description?: string;
  structuredData?: any;
}

const { title, description, structuredData } = Astro.props;
const fullTitle = title.includes('SwankyBoyz') ? title : `${title} | SwankyBoyz`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    
    <!-- Structured Data -->
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    )}
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <nav class="border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold hover:text-blue-600 dark:hover:text-blue-400">
          SwankyBoyz
        </a>
        <div class="flex gap-6">
          <a href="/articles" class="hover:text-blue-600 dark:hover:text-blue-400">Articles</a>
          <a href="/reviews" class="hover:text-blue-600 dark:hover:text-blue-400">Reviews</a>
          <a href="/contact" class="hover:text-blue-600 dark:hover:text-blue-400">Contact</a>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="border-t border-gray-200 dark:border-gray-800 mt-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h3 class="font-bold mb-4">SwankyBoyz</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Premium men's grooming, style & lifestyle guide.
            </p>
          </div>
          <div>
            <h4 class="font-bold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li><a href="/articles" class="hover:text-blue-600">Articles</a></li>
              <li><a href="/reviews" class="hover:text-blue-600">Reviews</a></li>
              <li><a href="/affiliate-disclosure" class="hover:text-blue-600">Affiliate Disclosure</a></li>
              <li><a href="/privacy-policy" class="hover:text-blue-600">Privacy Policy</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-bold mb-4">Follow Us</h4>
            <p class="text-gray-600 dark:text-gray-400">
              Stay updated with the latest grooming tips and product reviews.
            </p>
          </div>
        </div>
        <div class="text-center text-gray-600 dark:text-gray-400 pt-8 border-t border-gray-200 dark:border-gray-800">
          <p>&copy; 2025 SwankyBoyz. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
